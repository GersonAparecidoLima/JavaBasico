package curso_progamacoes;

import java.util.Locale;
import java.util.Scanner;

import javax.swing.JOptionPane;

public class Main {

	public static void main(String[] args) {

		String product1 = "Computer";
		String product2 = "Office desk";
		byte age = 30;
		int code = 5290;
		char gender = 'F';
		double price1 = 2100.0;
		double price2 = 650.50;
		double measure = 53.234567;
		System.out.println("Products:");
		//para imprimir casas decimais
		//printf, %.2f indica que vc quer duas casas decimais
		//printf pegar o indioma que o computador
		//para vc trocar a virgula por ponto vc precissa configura
		
		//concatenar vários elementos
		//%s => texto
		System.out.printf("%s, which price is $ %.2f%n", product1, price1);
		System.out.printf("%s, which price is $ %.2f%n", product2, price2);
		System.out.println();
		//concatenar vários elementos
		//utilizando os marcadores %f => ponto flutuante 
		//%d => inteiro
		//%c => char
		System.out.printf("Record: %d years old, code %d and gender: %c%n", age, code, gender);
		System.out.println();
		System.out.printf("Measue with eight decimal places: %.8f%n", measure);
		//concatenar vários elementos
		//utilizando os marcadores %f => ponto flutuante
		System.out.printf("Rouded (three decimal places): %.3f%n", measure);

		//printf pegar o indioma que o computador
		//para vc trocar a virgula por ponto vc precissa configura 
		//Locale.setDefault(Locale.US);	
		Locale.setDefault(Locale.US);
		//%n quebra de linha
		System.out.printf("US decimal point: %.3f%n", measure);
	       
	 	
	}

}
